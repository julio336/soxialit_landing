<div class="row">
	<div class="span6">
		<h1>Soxialit</h1>
	</div>
	<div class="span1 offset4">
		<p id="session">
   			<%= link_to "Home", root_path %><br />
   		</p>
	</div>
</div>

<h2 id="titleDescription">Soxialit es una <span id="redsocial">red social</span> que conecta<br/>
	<span id="fashion">fashion</span> <span id="bold">designers, bloggers, fotográfos y boutiques</span>
	<br />en México y Latinoamérica.
</h2>

<div class="row">
	<div class="span4 offset4">
		<div class="well">

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password %></div>

			  <div><%= f.submit "Iniciar Sesión" %></div>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
    mixpanel.track("Invitation Page Loaded")
</script>

