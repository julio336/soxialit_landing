<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>
<% if @product.description.present? %>

	<p>
	  <b>Description:</b>
	  <%= @product.description %>
	</p>

	<p>
	  <b>Brand:</b>
	  <%= @product.brand %>
	</p>

	<p>
		<%= image_tag @product.picture_url(:random) if @product.picture.present? %>
	</p>
<% end %>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
